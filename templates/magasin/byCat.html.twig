{% extends 'CategoryBase.html.twig' %}

{% block title %}Echo26{% endblock %}

{% block body %}


    <div class="col-lg-8">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <h4 class="m-0 text-uppercase font-weight-bold">Categorie: {{ categorie }}</h4>
                    <a class="text-secondary font-weight-medium text-decoration-none" href="">Tout voir</a>
                </div>
            </div>
            {% for article in articles %}
            <div class="col-lg-6">
                <div class="position-relative mb-3">
                    <img class="img-fluid w-100" width="700" height="435" src="{{ asset('uploads/Images/'~article.imageEntete) }}" style="object-fit: cover;">
                    <div class="bg-white border border-top-0 p-4">
                        <div class="mb-2">
                            <a class="badge badge-primary text-uppercase font-weight-semi-bold p-2 mr-2"
                               href="">{{ article.categorie }}</a>
                            <a class="text-body" href=""><small>{{ article.dateAffihcer|date('Y-m-d') }}</small></a>
                        </div>
                        <a class="h4 d-block mb-3 text-secondary text-uppercase font-weight-bold" href="{{ path('app_magasin_showsinglearticle', {'id':article.id}) }}">{{ article.titre }}</a>
                        <p class="m-0">{{ article.teaser }}</p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
