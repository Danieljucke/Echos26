{% extends 'base.html.twig' %}

{% block title %}Echo26{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-7 px-0">
            <div class="owl-carousel main-carousel position-relative">
                {% for article in showArticle|slice(0, 4) %}

                <div class="position-relative overflow-hidden" style="height: 500px;">
                    <img class="img-fluid h-100"  width="800" height="500" src="{{ asset('uploads/Images/'~ article.imageEntete) }}" style="object-fit: cover;">
                    <div class="overlay">
                        <div class="mb-2">
                            <a class="badge badge-primary text-uppercase font-weight-semi-bold p-2 mr-2"
                               href="">{{ article.categorie }}</a>
                            <a class="text-white" href="">{{ article.dateAffihcer|date('Y-m-d') }}</a>
                        </div>
                        <a class="h2 m-0 text-white text-uppercase font-weight-bold" href="{{ path('app_magasin_showsinglearticle',{'id':article.id}) }}">{{ article.titre }}</a>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>

        <div class="col-lg-5 px-0">
            <div class="row mx-0">
                {% for article in showArticle|slice(0, 4) %}
                <div class="col-md-6 px-0">
                    <div class="position-relative overflow-hidden" style="height: 250px;">
                        <img class="img-fluid w-100 h-100" height="435" width="700" src="{{ asset('uploads/Images/'~ article.imageEntete) }}" style="object-fit: cover;">
                        <div class="overlay">
                            <div class="mb-2">
                                <a class="badge badge-primary text-uppercase font-weight-semi-bold p-2 mr-2"
                                   href="">
                                    {{ article.categorie }}
                                </a>
                                <a class="text-white" href=""><small>{{ article.dateAffihcer|date('Y-m-d') }}</small></a>
                            </div>
                            <a class="h6 m-0 text-white text-uppercase font-weight-semi-bold" href="{{ path('app_magasin_showsinglearticle',{'id':article.id}) }}">{{ article.titre }}</a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>

<!-- Featured News Slider Start -->
<div class="container-fluid pt-5 mb-3">
    <div class="container">
        <div class="section-title">
            <h4 class="m-0 text-uppercase font-weight-bold">Ã€ la une</h4>
        </div>
        <div class="owl-carousel news-carousel carousel-item-4 position-relative">
            {% for article in articleService.giveArticle|slice(0, 5)|filter(a => a.statut) %}
                <div class="position-relative overflow-hidden" style="height: 300px;">
                    <img class="img-fluid h-100" width="700" height="435" src="{{ asset('uploads/Images/'~article.imageEntete) }}" style="object-fit: cover;">
                    <div class="overlay">
                        <div class="mb-2">
                            <a class="badge badge-primary text-uppercase font-weight-semi-bold p-2 mr-2"
                               href="">{{article.categorie}}</a>
                            <a class="text-white" href=""><small>{{ article.dateAffihcer|date('Y-m-s') }}</small></a>
                        </div>
                        <a class="h6 m-0 text-white text-uppercase font-weight-semi-bold" href="{{ path('app_magasin_showsinglearticle', {'id':article.id}) }}">{{ article.teaser|slice(0,71)~"..." }}</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
<!-- Featured News Slider End -->
