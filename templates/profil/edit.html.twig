{% extends 'base_2.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
                <div class="login-brand">
                    Echo26
                </div>

                <div class="card card-primary">
                    <div class="card-header"><h4>Editer</h4></div>
                    {{ form_start(userForm) }}
                    <div class="card-body">
                        <div class="form-group">
                            <label>Email</label>
                            {{ form_widget(userForm.email) }}
                        </div>
                        <div class="form-group">
                            <label>Nom</label>
                            {{ form_widget(userForm.nom) }}
                        </div>
                        <div class="form-group">
                            <label>Prenom</label>
                            {{ form_widget(userForm.prenom) }}
                        </div>
                        <div class="form-group">
                            <label>Téléphone</label>
                            {{ form_widget(userForm.telephone) }}
                        </div>
                        <div class="form-group">
                            <label>Date De Naissance</label>
                            {{ form_widget(userForm.birth) }}
                        </div>
                        <div class="form-group">
                            <label>Mot de passe</label>
                            {{ form_widget(userForm.password) }}
                        </div>
                        {{ form_widget(userForm.Enregistrer, {'label':'Update'}) }}
                    </div>
                    {{ form_row(userForm._token) }}
                    {{ form_end(userForm) }}
                </div>
{#                {{ form_errors(userForm) }}#}

                <div class="simple-footer">
                    Copyright &copy; Echo26 {{ "now"|date("Y") }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
