{% extends 'base_2.html.twig' %}

{% block title %}Editer{% endblock %}

{% block body %}
    <div class="needs-validation">
        {{ form_start(form) }}
        <div class="card">
            <div class="card-header">
                <h4>Editer</h4>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label>Title</label>
                    {{ form_widget(form.titre) }}
                    <div class="invalid-feedback">
                        Please fill in the title
                    </div>
                </div>
                <div class="form-group">
                    <label>Teaser</label>
                    {{ form_widget(form.teaser) }}
                </div>
                <div class="row">
                    <div class="col">
                        <label>Ecrit par</label>
                        {{ form_widget(form.ecritPar) }}
                    </div>
                    <div class="col">
                        <label></label>
                        {{ form_widget(form.dateAffihcer) }}
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col">
                        <label>Type</label>
                        {{ form_widget(form.type,{'attr':{'class':'btn btn-secondary dropdown-toggle'}}) }}
                    </div>
                    <div class="col">
                        <label>Categorie</label>
                        {{ form_widget(form.categorie,{'attr':{'class':'btn btn-secondary dropdown-toggle'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <label>Body</label>
                    {{ form_widget(form.corps,{'attr':{'class':'summernote-simple'} }) }}
                </div>
                <div class="row">
                    <div class="col">
                        <label>Image de l'article</label>
                        {{ form_widget(form.imageEntete,{'attr':{'class':'btn btn-secondary dropdown-toggle'}}) }}
                    </div>
                    <div class="col">
                        <label>Image du corps de l'article</label>
                        {{ form_widget(form.imageCorps,{'attr':{'class':'btn btn-secondary dropdown-toggle'}}) }}
                    </div>
                    <div class="col">
                        <label>la section de l'article</label>
                        {{ form_widget(form.section,{'attr':{'class':'btn btn-secondary dropdown-toggle'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_widget(form.statut) }}
                </div>
            </div>
            <div class="card-footer">
                {{ form_widget(form.Ajouter, {'attr':{'class':'btn btn-primary'} , 'label':'update'}) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
